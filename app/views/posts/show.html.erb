<header class="masthead" style="background-image: url('<%= @post.thumbnail %>'">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading">
          <h1><%= @post.title %></h1>
          <h2 class="subheading"><%= @post.description %></h2>
          <span class="meta">Posted by
            <a href="#"><%= @post.user&.email %></a>
            on <%= %>
          </span>
          <br>
          <% if policy(@post).edit? %>
            <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary btn-sm" %>
          <% end %>

          <% if policy(@post).destroy? %>
            <%= link_to "Delete", post_path(@post), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure want to delete this post ?' } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <%= raw @post.content %>
      </div>
    </div>
  </div>
</article>
