<div class="p-5 container-fluid">
  <h3>All userss</h3>
  <table class="table mt-4">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Role</th>
        <th>Total posts</th>
        <th>Joined at</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? 'Admin' : 'Regular' %></td>
          <td><%= user.posts.count %></td>
          <td><%= user.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="float-right">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
