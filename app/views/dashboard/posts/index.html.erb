<div class="p-5 container-fluid">
  <%= link_to 'Create post', new_dashboard_post_path, class: 'btn btn-primary mb-4' %>
  <h3>All posts</h3>
  <table class="table mt-4">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.description[0..20] %> ...</td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
          <td>
            <%= link_to "Edit", edit_dashboard_post_path(post), class: 'btn btn-sm btn-primary' %>
            <%= link_to "Delete", dashboard_post_path(post), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure want to delete this ?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="float-right">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
