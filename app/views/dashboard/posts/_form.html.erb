<div class="row">
  <div class="col-md-12 mt-2">
    <%= render partial: "dashboard/shared/error_messages", locals: { resource: post } %>
    <%= form_for(post, url: url, class: "form form-horizontal") do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
      </div>

      <div class="form-group">
        <%= form.file_field :thumbnail %>
      </div>
      <%- thumbnail_url = form.object.thumbnail.url || '' %>
      <%= image_tag thumbnail_url, class: 'w-100 mb-4 post_thumbnail_image', style: "max-width: 600px;" %>

      <div class="form-group">
        <%= form.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
