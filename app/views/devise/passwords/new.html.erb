<%= render partial: "layouts/header", locals: { bg_image: asset_pack_url('media/images/home-bg.jpg') }%>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <%= render "devise/shared/flash" %>
      <h2 class="text-center">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "Email...", class: "form-control" %>
            <p class="help-block text-danger"></p>
          </div>
        </div>

        <br>

        <%= f.submit "Send me reset password instructions", class: "col-md-12 btn btn-primary" %>

        <p class="text-secondary font-italic text-center"> Or </p>
        <div class="buttons row pl-3 pr-3">
          <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-secondary text-decoration-none col-6" %>
          <%= link_to "Register", new_registration_path(resource_name), class: "btn btn-info text-decoration-none col-6" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
